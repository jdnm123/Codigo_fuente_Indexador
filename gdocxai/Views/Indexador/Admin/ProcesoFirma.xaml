<UserControl
    x:Class="Indexai.Views.ProcesoFirma"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="865"
    Height="500"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Syncfusion:SfDataGrid
            x:Name="exportGrid"
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,56,-0.2,38"
            AllowFiltering="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding ElementName=exportPager, Path=PagedSource}"
            NavigationMode="Row"
            d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">
            <Syncfusion:SfDataGrid.Columns>
                <Syncfusion:GridTextColumn
                    HeaderText="Lote"
                    MappingName="t_lote.nom_lote"
                    TextAlignment="Left" />
                <Syncfusion:GridTextColumn
                    x:Uid="nro_caja"
                    HeaderText="Caja"
                    MappingName="nro_caja"
                    TextAlignment="Left" />
                <Syncfusion:GridTextColumn
                    HeaderText="NumExpediente"
                    MappingName="nro_expediente"
                    TextAlignment="Left" />
                <Syncfusion:GridTextColumn
                    Width="650"
                    HeaderText="Expediente"
                    MappingName="nom_expediente"
                    TextAlignment="Left" />
                <Syncfusion:GridTextColumn
                    HeaderText="Carpeta"
                    MappingName="nro_carpeta"
                    TextAlignment="Left" />
                <Syncfusion:GridTextColumn
                    HeaderText="Folios"
                    MappingName="Folios"
                    TextAlignment="Left" />
                <Syncfusion:GridTextColumn
                    HeaderText="Paginas"
                    MappingName="Paginas"
                    TextAlignment="Left" />
                <Syncfusion:GridTextColumn
                    HeaderText="Asignado"
                    MappingName="Asignado"
                    TextAlignment="Left" />
                <Syncfusion:GridTextColumn
                    HeaderText="Estado"
                    MappingName="Estado"
                    TextAlignment="Left" />
            </Syncfusion:SfDataGrid.Columns>
        </Syncfusion:SfDataGrid>
        <Label
            Name="txtGridTotalitems"
            Grid.Row="1"
            Grid.Column="1"
            Width="147"
            Height="26"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Total registros: 0" />
        <!--
            indexai:BuscadorLotes
            x:Name="buscadorView"
            Grid.Row="1"
            Margin="0,7,0,0" /
        -->
        <Syncfusion:SfDataPager
            x:Name="exportPager"
            Grid.Row="1"
            Grid.Column="1"
            Height="33"
            Margin="10,0,-0.2,0"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Center"
            PageSize="5"
            d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" />
        <TextBox
            x:Name="txtItemCount"
            Grid.Row="1"
            Grid.Column="1"
            Width="150"
            Height="24"
            Margin="10,27,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap"
            d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Height="26"
            Margin="10,1,-0.2,0"
            VerticalAlignment="Top"
            Content="Cantidad máxima de documentos"
            d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" />
        <Button
            x:Name="btnMaximoItemsGrid"
            Grid.Row="1"
            Grid.Column="1"
            Width="86"
            Height="24"
            Margin="165,27,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnMaximoItemsGrid_Click"
            Content="Aplicar"
            TextElement.FontSize="10"
            d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" />
        <Button
            x:Name="btnProcesarFirma"
            Grid.Row="1"
            Grid.Column="1"
            Width="110"
            Height="38"
            Margin="277,10,227.8,0"
            VerticalAlignment="Top"
            Click="btnProcesarFirma_Click"
            Content="Procesar"
            d:LayoutOverrides="VerticalAlignment" />
    </Grid>
</UserControl>
